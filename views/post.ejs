<%- include('partials/head') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= project.title %></h2>
      <img class="img-fluid" src="<%= project.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/project/likeProject/<%= project.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= project.likes %></h3>
        <%if(project.user == user.id){ %>
        <form
          action="/project/deleteProject/<%= project.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= project.caption %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/dashboard">Return to Dashboard</a>
    </div>
  </div>
</div>

<%- include('partials/foot') -%>
